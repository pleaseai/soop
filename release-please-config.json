{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "plugins": [
    {
      "type": "node-workspace"
    }
  ],
  "packages": {
    "packages/soop": {
      "release-type": "node",
      "package-name": "@pleaseai/soop",
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "include-component-in-tag": false,
      "include-v-in-tag": true,
      "extra-files": [
        {
          "type": "json",
          "path": "packages/soop/package.json",
          "jsonpath": "$.optionalDependencies['@pleaseai/soop-darwin-arm64']"
        },
        {
          "type": "json",
          "path": "packages/soop/package.json",
          "jsonpath": "$.optionalDependencies['@pleaseai/soop-darwin-x64']"
        },
        {
          "type": "json",
          "path": "packages/soop/package.json",
          "jsonpath": "$.optionalDependencies['@pleaseai/soop-linux-x64-glibc']"
        },
        {
          "type": "json",
          "path": "packages/soop/package.json",
          "jsonpath": "$.optionalDependencies['@pleaseai/soop-linux-arm64-glibc']"
        },
        {
          "type": "json",
          "path": "packages/soop/package.json",
          "jsonpath": "$.optionalDependencies['@pleaseai/soop-linux-x64-musl']"
        },
        {
          "type": "json",
          "path": "packages/soop/package.json",
          "jsonpath": "$.optionalDependencies['@pleaseai/soop-linux-arm64-musl']"
        },
        {
          "type": "json",
          "path": "packages/soop/package.json",
          "jsonpath": "$.optionalDependencies['@pleaseai/soop-win32-x64']"
        }
      ]
    },
    "packages/cli": {
      "release-type": "node",
      "package-name": "@pleaseai/soop-cli",
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "include-component-in-tag": true,
      "include-v-in-tag": true
    },
    "packages/encoder": {
      "release-type": "node",
      "package-name": "@pleaseai/soop-encoder",
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": true,
