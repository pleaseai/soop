      "include-component-in-tag": true,
      "include-v-in-tag": true
    },
    "packages/mcp": {
      "release-type": "node",
      "package-name": "@pleaseai/soop-mcp",
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "include-component-in-tag": true,
      "include-v-in-tag": true
    },
    "packages/store": {
      "release-type": "node",
      "package-name": "@pleaseai/soop-store",
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "include-component-in-tag": true,
      "include-v-in-tag": true
    },
    "packages/tools": {
      "release-type": "node",
