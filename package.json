{
  "name": "rpg-please",
  "version": "0.1.0",
  "description": "Repository Planning Graph - A unified framework for repository understanding and generation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rpg": "dist/cli.js",
    "rpg-mcp": "dist/mcp/server.js"
  },
  "scripts": {
    "dev": "bun run --watch src/cli.ts",
    "mcp": "bun run src/mcp/server.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:integration": "vitest run --project=integration",
    "test:file": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "format": "biome format --write src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build",
    "postinstall": "npm rebuild better-sqlite3 2>/dev/null || true"
  },
  "packageManager": "bun@1.3.7",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.36",
    "@ai-sdk/google": "^3.0.21",
    "@ai-sdk/openai": "^3.0.25",
    "@anthropic-ai/sdk": "^0.30.1",
    "@huggingface/transformers": "^3.8.1",
    "@lancedb/lancedb": "^0.13.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@surrealdb/node": "^2.6.0",
    "ai": "^6.0.70",
    "better-sqlite3": "^12.6.2",
    "commander": "^12.1.0",
    "graphology": "^0.25.4",
    "graphology-types": "^0.24.8",
    "openai": "^4.104.0",
    "surrealdb": "^2.0.0-alpha.17",
    "tree-sitter": "^0.21.1",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@biomejs/biome": "^1.9.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.8",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.39.2",
    "eslint-plugin-import-x": "^4.16.1",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "repository",
    "code-generation",
    "code-understanding",
    "llm",
    "graph",
    "software-engineering",
    "ast"
  ],
  "author": "Minsu Lee <amondnet@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amondnet/rpg.git"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  }
}