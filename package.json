{
  "name": "repo-please-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --watch packages/cli/src/cli.ts",
    "mcp": "bun run packages/mcp/src/server.ts",
    "build": "tsdown && bun run build:copy-assets",
    "build:copy-assets": "mkdir -p packages/repo/dist/packages/cli/templates && cp packages/cli/src/templates/*.yml packages/repo/dist/packages/cli/templates/",
    "build:npm": "bun run scripts/generate-packages.ts",
    "publish:npm": "bun run build:npm && for dir in npm/repo-*/; do (cd \"$dir\" && npm publish --access public); done",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:integration": "vitest run --project=integration",
    "test:file": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "format": "eslint --cache --fix .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf packages/repo/dist"
  },
  "packageManager": "bun@1.3.9",
  "dependencies": {
    "tree-sitter": "0.25.0",
    "tree-sitter-c": "0.24.1",
    "tree-sitter-c-sharp": "0.23.1",
    "tree-sitter-cpp": "0.23.4",
    "tree-sitter-go": "0.25.0",
    "tree-sitter-java": "0.23.5",
    "tree-sitter-kotlin": "0.3.8",
    "tree-sitter-python": "0.25.0",
    "tree-sitter-ruby": "0.23.1",
    "tree-sitter-rust": "0.24.0",
    "tree-sitter-typescript": "0.23.2"
  },
  "devDependencies": {
    "@pleaseai/repo-cli": "workspace:*",
    "@pleaseai/repo-encoder": "workspace:*",
    "@pleaseai/repo-graph": "workspace:*",
    "@pleaseai/repo-mcp": "workspace:*",
    "@pleaseai/repo-store": "workspace:*",
    "@pleaseai/repo-tools": "workspace:*",
    "@pleaseai/repo-utils": "workspace:*",
    "@pleaseai/repo-zerorepo": "workspace:*",
    "@ai-sdk/anthropic": "^3.0.36",
    "@ai-sdk/google": "^3.0.21",
    "@ai-sdk/openai": "^3.0.25",
    "@antfu/eslint-config": "^7.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.8",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "ai": "^6.0.70",
    "ai-sdk-provider-claude-code": "^3.4.2",
    "ai-sdk-provider-codex-cli": "^1.0.5",
    "commander": "^14.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-import-x": "^4.16.1",
    "tsdown": "^0.20.3",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "zod": "^4.0.0"
  },
  "trustedDependencies": [
    "better-sqlite3"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pleaseai/repo.git"
  }
}
