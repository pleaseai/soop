{
  "name": "@pleaseai/rpg",
  "version": "0.1.5",
  "description": "Repository Planning Graph - A unified framework for repository understanding and generation",
  "type": "module",
  "files": [
    "dist/",
    "packages/*/package.json"
  ],
  "main": "dist/src/index.mjs",
  "types": "dist/src/index.d.mts",
  "bin": {
    "rpg": "dist/packages/cli/src/cli.mjs",
    "rpg-mcp": "dist/packages/mcp/src/server.mjs"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --watch packages/cli/src/cli.ts",
    "mcp": "bun run packages/mcp/src/server.ts",
    "build": "tsdown && bun run build:copy-assets",
    "build:copy-assets": "mkdir -p dist/packages/cli/templates && cp packages/cli/src/templates/*.yml dist/packages/cli/templates/",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:integration": "vitest run --project=integration",
    "test:file": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "format": "eslint --cache --fix .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build"
  },
  "packageManager": "bun@1.3.7",
  "dependencies": {
    "@pleaseai/rpg-utils": "workspace:*",
    "@pleaseai/rpg-store": "workspace:*",
    "@pleaseai/rpg-graph": "workspace:*",
    "@pleaseai/rpg-encoder": "workspace:*",
    "@pleaseai/rpg-tools": "workspace:*",
    "@pleaseai/rpg-zerorepo": "workspace:*",
    "@pleaseai/rpg-mcp": "workspace:*",
    "@pleaseai/rpg-cli": "workspace:*",
    "tree-sitter": "^0.21.1",
    "tree-sitter-go": "0.21.2",
    "tree-sitter-java": "0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "0.21.0",
    "tree-sitter-typescript": "^0.21.2"
  },
  "optionalDependencies": {
    "@lancedb/lancedb": "^0.13.0",
    "@surrealdb/node": "^2.6.0",
    "better-sqlite3": "^12.6.2"
  },
  "peerDependencies": {
    "zod": "^3.25.0 || ^4.0.0"
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "^3.0.36",
    "@ai-sdk/google": "^3.0.21",
    "@ai-sdk/openai": "^3.0.25",
    "@antfu/eslint-config": "^7.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.8",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "ai": "^6.0.70",
    "ai-sdk-provider-claude-code": "^3.4.2",
    "ai-sdk-provider-codex-cli": "^1.0.5",
    "commander": "^14.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-import-x": "^4.16.1",
    "tsdown": "^0.20.3",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "zod": "^4.0.0"
  },
  "keywords": [
    "repository",
    "code-generation",
    "code-understanding",
    "llm",
    "graph",
    "software-engineering",
    "ast"
  ],
  "author": "Minsu Lee <amond@amond.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pleaseai/rpg.git"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  },
  "trustedDependencies": [
    "better-sqlite3"
  ]
}
