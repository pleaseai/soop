{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "typecheck": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts", "tsconfig.json"],
      "outputs": []
    },
    "lint": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts", "eslint.config.js"],
      "outputs": [".eslintcache"]
    },
    "test:unit": {
      "inputs": ["src/**/*.ts", "tests/**/*.test.ts", "vitest.config.ts", "vitest.workspace.ts"],
      "outputs": []
    },
    "test:integration": {
      "inputs": ["src/**/*.ts", "tests/**/*.integration.test.ts", "vitest.config.ts", "vitest.workspace.ts"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["typecheck"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"]
    }
  }
}
