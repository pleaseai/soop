{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["src/**/*.ts", "packages/*/src/**/*.ts", "tsconfig.json"],
      "outputs": []
    },
    "lint": {
      "inputs": ["packages/*/src/**/*.ts", "tests/**/*.ts", "eslint.config.js"],
      "outputs": [".eslintcache"]
    },
    "test:unit": {
      "inputs": ["packages/*/src/**/*.ts", "tests/**/*.test.ts", "vitest.config.ts", "vitest.workspace.ts"],
      "outputs": []
    },
    "test:integration": {
      "inputs": ["packages/*/src/**/*.ts", "tests/**/*.integration.test.ts", "vitest.config.ts", "vitest.workspace.ts"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["typecheck"],
      "inputs": ["src/**/*.ts", "packages/*/src/**/*.ts"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
